# https://editorconfig.org

root = true

# Common settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
max_line_length = 100

[*.S]
indent_size = 4

[Cargo.toml]
indent_size = 4
max_line_length = 100

[Makefile]
indent_size = 4
indent_style = tab
